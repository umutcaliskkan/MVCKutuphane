@model MvcKutuphane.Models.Entity.TBLHAREKET
@{
    ViewBag.Title = "OduncVer";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<form class="form-group" method="post">
    @*Post olduğunda burdaki işlemleri gerçekleştir*@
    <div style="margin-top:15px">
        <label>Üye ID</label>
       
        @Html.DropDownListFor(k=>k.TBLUYELER.ID,(List<SelectListItem>)
       ViewBag.dgr1,new {@class="form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Kitap ID</label>
        @Html.DropDownListFor(k=>k.TBLKITAP.ID,(List<SelectListItem>)
       ViewBag.dgr2,new {@class="form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Personel ID</label>
        @Html.DropDownListFor(k=>k.TBLPERSONEL.ID,(List<SelectListItem>)
       ViewBag.dgr3,new {@class="form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Kitap Alış Tarihi</label>
        <input type="text" class="form-control" name="ALISTARIH" value="@DateTime.Now.ToShortDateString()" />  @*Datetime ile inputa günün tarihi çekildi ve toshort ile kısa hale getirildi*@
    </div>
    <div style="margin-top:15px">
        <label>Kitap İade Tarihi</label>
        <input type="text" class="form-control" name="IADETARIH" value="@DateTime.Now.AddDays(7).ToShortDateString()" />  @*add days komutu ile günümüz tarihine 7 gün ekliyor*@
    </div>

    <div style="margin-top:15px">
        <button class="btn btn-info" style="background-color:purple">Kitabı Ödünç Ver</button> @*Post işlemi buton ile gerçekleşti*@
        <input type="hidden" value="False" name="ISLEMDURUM"
    </div>
    
</form>

