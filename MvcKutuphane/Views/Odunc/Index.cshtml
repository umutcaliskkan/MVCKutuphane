@using MvcKutuphane.Models.Entity
@model List<TBLHAREKET>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}


<table class="table table-bordered">
    <tr>
        <th>İşlem ID</th>
        <th>Kitap Adı</th>
        <th>Üye</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>İade Tarihi</th>
        <th></th>
    </tr>
    @foreach (var hareket in Model)
    {
<tr>
    <td>@hareket.ID</td>
    <td>@hareket.TBLKITAP.AD</td> @*ilişkili tablo böyle gösteriliyor*@
    <td>@hareket.TBLUYELER.AD @hareket.TBLUYELER.SOYAD</td> @*ilişkili tablo böyle gösteriliyor*@
    <td>@hareket.TBLPERSONEL.PERSONEL</td>
    <td>@Convert.ToDateTime(hareket.ALISTARIH).ToString("dd/MM/yyyy")</td> @*saatli tarih sadece gün ay yıl tarihine çevirildi*@
    <td>@Convert.ToDateTime(hareket.IADETARIH).ToString("dd/MM/yyyy")</td>
    <td>@Html.ActionLink("Kitabı İade Et", "Odunciade", new { id = hareket.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Kitabı İade Etmek İstiyor musunuz?')" })</td>
</tr>
    }
</table>

